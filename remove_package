#!/bin/bash

if [[ $(whoami) != "root" ]]
then
    echo "Il faut Ãªtre root"
    exit 1
fi

packages="
foot
firefox
dmenu
htop
brightnessctl
nano
swaylock
"

for package in $packages
do
    pacman -Rs --noconfirm $package &> /dev/null

    if [[ "$1" == "0" ]]
    then
        echo -e "\033[32mOK\033[0m $package"
    else
        echo -e "\033[31mERREUR\033[0m $package"
    fi
done

