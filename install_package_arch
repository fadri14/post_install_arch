packages_flatpak="
"

packages_pip="
pynvim
"

#swaylock-effects
#waylock

check_install()
{
    if [[ "$1" == "0" ]]
    then
        echo "OK $package"
    else
        echo "ERREUR $package"
    fi
}

for package in $packages
do
    pacman -S --needed --noconfirm $package 2>&1 > /dev/null
    check_install $? $package
done

for package in $packages_aur
do
    yay -S --noconfirm $package 2>&1 > /dev/null
    check_install $? $package
done

for package in $packages_flatpak
do
    flatpak install $package 2>&1 > /dev/null
    check_install $? $package
done

for package in $packages_pip
do
    pip install $package 2>&1 > /dev/null
    check_install $? $package
done

